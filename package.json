{
  "name": "Reel",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "compile": "tsc --noEmit -p .",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "format": "yarn -s format:js && yarn -s format:ts && yarn -s format:json",
    "format:js": "prettier --write {.,**}/*.js",
    "format:json": "prettier --write {.,**}/*.json",
    "format:ts": "prettier --write **/*.{ts,tsx} && tslint --fix -p tsconfig.json",
    "lint": "yarn -s lint:ts",
    "lint:ts": "tslint -p tsconfig.json",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "dependencies": {
    "jest-preset-typescript-react-native": "^1.2.0",
    "ramda": "^0.25.0",
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-native-code-push": "^5.3.4",
    "react-native-modal": "^6.1.0",
    "react-native-vector-icons": "^4.6.0",
    "react-native-video": "^2.2.0",
    "react-navigation": "^2.3.1",
    "react-navigation-redux-helpers": "^2.0.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0",
    "redux-saga": "^0.16.0",
    "reduxsauce": "^1.0.0",
    "seamless-immutable": "^7.1.3"
  },
  "devDependencies": {
    "babel-jest": "23.0.1",
    "babel-preset-react-native": "4.0.0",
    "husky": "^0.14.3",
    "jest": "23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.3.1",
    "redux-mock-store": "^1.5.3",
    "solidarity": "^2.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "preset": "jest-preset-typescript-react-native",
    "setupFiles": [
      "<rootDir>/node_modules/react-native/jest/setup.js",
      "./test/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|react-navigation)"
    ]
  },
  "lint-staged": {
    "concurrent": false,
    "subTaskConcurrency": 1,
    "linters": {
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint --fix -p tsconfig.json",
        "git add"
      ]
    }
  },
  "config": {},
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "test",
      "jest",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "XMLHttpRequest",
      "FormData",
      "React$Element"
    ]
  }
}